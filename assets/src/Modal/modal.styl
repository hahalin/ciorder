.react-modal-with-keys-action-background
    background rgba(0,0,0, .7)
    width 100%
    height 100%
    position fixed
    z-index 99999
    top 0
    left 0
    overflow scroll
    display flex
    justify-content center
    .react-modal-with-keys-action-wrapper
        position relative
        display table-cell
        vertical-align middle
        width 100%
        padding 100px 0
        overflow-y auto
        .react-modal-with-keys-action
            position relative
            width 90%
            padding 25px 25px
            background #fff
            margin 0 auto
            img
              max-width 100%
              max-height 300px
            .react-modal-with-keys-action-close
                position absolute
                cursor pointer
                right 50px
                top -30px
                div.react-modal-with-keys-action-x
                    position absolute
                    width 60px
                    height 0
                    border-top 3px solid white
                    &:first-child
                        transform rotate(135deg)
                    &:last-child
                        transform rotate(45deg)
@media only screen and (min-width: 48em)
    .react-modal-with-keys-action-background
        .react-modal-with-keys-action-wrapper
            .react-modal-with-keys-action
                width 50%
                padding 25px 50px
                .react-modal-with-keys-action-close
                    right 0
                    top -30px